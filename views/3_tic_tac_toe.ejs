<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      tr,
      td {
        border: 2px solid black;

      }
      #reset {
        width: 150px;
        height: 40px;
        font-size: 18px;
        color: white;
        background-color: #1c0204;
        border: none;
        border-radius: 3px;
      }
      #demo{
        font-size: large;
      }
      td{
        font-size: 30px;
      }
      #demo{
        font-size: 35px;

      }
      
    </style>
  </head>

  <body>
    <center>
      <h1>Harsh Solanki</h1>
      <h1>05-feb</h1>
      <h1>24DEV033</h1>
    </center>
    <table cellpadding="70" align="center">
      <tr>
        <td id="1" onclick="action('1')"></td>
        <td id="2" onclick="action('2')"></td>
        <td id="3" onclick="action('3')"></td>
      </tr>
      <tr>
        <td id="4" onclick="action('4')"></td>
        <td id="5" onclick="action('5')"></td>
        <td id="6" onclick="action('6')"></td>
      </tr>
      <tr>
        <td id="7" onclick="action('7')"></td>
        <td id="8" onclick="action('8')"></td>
        <td id="9" onclick="action('9')"></td>
      </tr>

    </table>
    <center><h2 id="demo2">Player O turn and X as second</h2></center>
     <center><p id="demo"></p></center>
    <center><input
        type="button"
        id="reset"
        value="reset"
        onclick="location.reload()"
      /></center>
    <script>
      var ct = 1;
      var o_arr = Array();
      var x_arr = Array();

      function action(id) {
        if (ct % 2 == 1) {
          if (document.getElementById(id).innerHTML == "") {
            document.getElementById(id).innerHTML ="O"
            o_arr.push(id);
            ct++;
          }
        } else {
          if (document.getElementById(id).innerHTML == "") {
            document.getElementById(id).innerHTML ="X"
            x_arr.push(id);
            ct++;
          }
        }

        //includes-function check the value in the array which we passed in the array

        if (
          (o_arr.includes("1") && o_arr.includes("2") && o_arr.includes("3")) ||
          (o_arr.includes("4") && o_arr.includes("5") && o_arr.includes("6")) ||
          (o_arr.includes("7") && o_arr.includes("8") && o_arr.includes("9")) ||
          (o_arr.includes("1") && o_arr.includes("4") && o_arr.includes("7")) ||
          (o_arr.includes("2") && o_arr.includes("5") && o_arr.includes("8")) ||
          (o_arr.includes("3") && o_arr.includes("6") && o_arr.includes("9")) ||
          (o_arr.includes("1") && o_arr.includes("5") && o_arr.includes("9")) ||
          (o_arr.includes("3") && o_arr.includes("5") && o_arr.includes("7"))
        ) {
          document.getElementById("demo").innerHTML="player O wins the game";
          document.getElementById("demo2").innerHTML="";
          //console.log("hello");
        } else if (
          (x_arr.includes("1") && x_arr.includes("2") && x_arr.includes("3")) ||
          (x_arr.includes("4") && x_arr.includes("5") && x_arr.includes("6")) ||
          (x_arr.includes("7") && x_arr.includes("8") && x_arr.includes("9")) ||
          (x_arr.includes("1") && x_arr.includes("4") && x_arr.includes("7")) ||
          (x_arr.includes("2") && x_arr.includes("5") && x_arr.includes("8")) ||
          (x_arr.includes("3") && x_arr.includes("6") && x_arr.includes("9")) ||
          (x_arr.includes("1") && x_arr.includes("5") && x_arr.includes("9")) ||
          (x_arr.includes("3") && x_arr.includes("5") && x_arr.includes("7"))
        ) {
          document.getElementById("demo").innerHTML="player X wins the game";
          document.getElementById("demo2").innerHTML="";
        } else if (ct == 10) {
          document.getElementById("demo").innerHTML="match is drawn";
          document.getElementById("demo2").innerHTML="";
        }
      }
    </script>
  </body>
</html>
